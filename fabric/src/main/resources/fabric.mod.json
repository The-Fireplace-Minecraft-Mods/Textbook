{
    "schemaVersion": 1,
    "id": "textbook",
    "version": "${version}",
    "name": "${readable_name}",
    "description": "${mod_description}",
    "authors": [
        "The_Fireplace"
    ],
    "contact": {
        "homepage": "${fabric_curseforge_url}",
        "sources": "${github_url}",
        "issues": "${github_url}/issues",
        "modrinth": "${modrinth_url}"
    },
    "license": "${license_id}",
    "icon": "${logo_filename}",
    "environment": "client",
    "entrypoints": {
        "fireplacelib": [
            "dev.the_fireplace.textbook.entrypoints.ConfigGui"
        ]
    },
    "mixins": [
        "textbook.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.12.0",
        "minecraft": "1.15.X",
        "annotateddi": ">=4 <5",
        "fireplacelib": ">=7 <8"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.discord": "${discord_url}",
                "annotateddi.twitter": "${twitter_url}",
                "annotateddi.kofi": "${kofi_url}",
                "annotateddi.patreon": "${patreon_url}"
            }
        }
    }
}
